{
  "name": "opendaw",
  "version": "0.0.0",
  "private": true,
  "license": "LGPL-3.0-or-later",
  "engines": {
    "node": ">=23"
  },
  "scripts": {
    "cert": "bash ./scripts/cert.sh",
    "clean": "bash ./scripts/clean.sh",
    "build": "turbo build",
    "dev:studio": "turbo run dev --filter=@opendaw/app-studio",
    "dev:lab": "turbo run dev --filter=@opendaw/lab",
    "dev:yjs-server": "turbo run dev --filter=yjs-server",
    "dev:electron": "concurrently \"npm run dev:studio\" \"npm run build --filter=@opendaw/electron-app && wait-on http://localhost:8080 && cross-env NODE_ENV=development electron packages/app/electron/dist/main.js\"",
    "build:electron": "npm run build --filter=@opendaw/electron-app && npm run build --filter=@opendaw/app-studio",
    "test": "turbo run test --concurrency=1",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-sdk": "lerna publish"
  },
  "devDependencies": {
    "@types/ssh2-sftp-client": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "lerna": "^8.2.3",
    "prettier": "^3.6.2",
    "ssh2-sftp-client": "^12.0.1",
    "ts-node": "^10.1.0",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "^3.1.3",
    "wait-on": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andremichelle/opendaw"
  },
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "packages/**/*"
  ]
}
